                        <align>left</align>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>

                <focusedlayout height="40" width="580">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>580</width>
                        <height>41</height>
                        <texture border="0,2,0,2">MenuItemNF.png</texture>
                        <visible>!Control.HasFocus(951)</visible>

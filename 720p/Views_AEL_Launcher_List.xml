<!--
  Launher List / ID 952
  Assets: Icon, Fanart, Banner, Flyer, Clearlogo.
  Metadata: Name, Year, Genre, Studio, Rating, Plot.

  Template used: Confluence Krypton ViewsFileMode.xml, view CommonRootView (50)
-->
<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!-- Selects poster first, if it does not exist then icon -->
    <!--
	<variable name="PosterThumb">
		<value condition="!String.IsEmpty(ListItem.Art(poster))">$INFO[ListItem.Art(poster)]</value>
		<value>$INFO[ListItem.Icon]</value>
	</variable>
    -->

	<include name="Addon_AEL_Launcher_List">
        <control type="group">
			<include>Window_OpenClose_Animation</include>
			<control type="group">
				<include>VisibleFadeEffect</include>
				<visible>Control.IsVisible(952)</visible>
				<control type="image">
					<left>50</left>
					<top>60</top>
					<width>750</width>
					<height>600</height>
					<texture border="15">ContentPanel.png</texture>
				</control>
				<control type="image">
					<left>50</left>
					<top>652</top>
					<width>750</width>
					<height>64</height>
					<texture border="15">ContentPanelMirror.png</texture>
				</control>
			</control>
		</control>

		<control type="group">
			<visible>Control.IsVisible(952)</visible>
			<include>VisibleFadeEffect</include>
			<control type="list" id="952">
				<left>70</left>
				<top>78</top>
				<width>690</width>
				<height>561</height>
				<onleft>2</onleft>
				<onright>60</onright>
				<onup>952</onup>
				<ondown>952</ondown>
				<viewtype label="Launcher List">list</viewtype>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>

				<itemlayout height="40" width="580">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>690</width>
						<height>41</height>
						<texture border="0,2,0,2">MenuItemNF.png</texture>
					</control>
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>580</width>
						<height>40</height>
						<font>font13</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="image">
						<left>665</left>
						<top>14</top>
						<width>20</width>
						<height>16</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<aspectratio>keep</aspectratio>
						<!-- <visible>Window.IsVisible(Videos)</visible> -->
					</control>
				</itemlayout>

				<focusedlayout height="40" width="580">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>690</width>
						<height>41</height>
						<texture border="0,2,0,2">MenuItemNF.png</texture>
						<visible>!Control.HasFocus(952)</visible>
						<include>VisibleFadeEffect</include>
					</control>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>690</width>
						<height>41</height>
						<texture border="0,2,0,2">MenuItemFO.png</texture>
						<visible>Control.HasFocus(952)</visible>
						<include>VisibleFadeEffect</include>
					</control>
					<control type="image">
						<left>490</left>
						<top>5</top>
						<width>200</width>
						<height>31</height>
						<texture border="0,0,14,0">MediaItemDetailBG.png</texture>
						<visible>Control.HasFocus(952) + !String.IsEmpty(ListItem.Label2)</visible>
					</control>
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>580</width>
						<height>40</height>
						<font>font13</font>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
 					<control type="image">
						<left>665</left>
						<top>14</top>
						<width>20</width>
						<height>16</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<aspectratio>keep</aspectratio>
						<!-- <visible>Window.IsVisible(Videos)</visible> -->
					</control>
				</focusedlayout>
			</control>

			<control type="scrollbar" id="60">
				<left>760</left>
				<top>85</top>
				<width>25</width>
				<height>550</height>
				<texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
				<texturesliderbar border="0,14,0,14">ScrollBarV_bar.png</texturesliderbar>
				<texturesliderbarfocus border="0,14,0,14">ScrollBarV_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
				<onleft>952</onleft>
				<onright>2</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<visible>Control.IsVisible(952)</visible>
			</control>
		</control>

        <!-- Right box -->
        <control type="group">
            <left>810</left>
            <top>60</top>
            <include>VisibleFadeEffect</include>
            <visible>Control.IsVisible(952)</visible>
            
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>440</width>
                <height>600</height>
                <texture border="15">ContentPanel.png</texture>
            </control>

            <!-- Metadata group -->
            <control type="group">
                <left>0</left>
                <top>265</top>

                <!-- Infolabels -->
                <control type="label">
                    <description>Genre txt</description>
                    <left>0</left>
                    <top>10</top>
                    <width>80</width>
                    <height>25</height>
                    <label>Genre:</label>
                    <align>right</align>
                    <aligny>center</aligny>
                    <font>font12</font>
                    <textcolor>blue</textcolor>
                </control>
                <control type="label">
                    <description>Genre Value</description>
                    <left>82</left>
                    <top>10</top>
                    <width>250</width>
                    <height>25</height>
                    <label fallback="">$INFO[ListItem.Genre]</label>
                    <align>left</align>
                    <aligny>center</aligny>
                    <font>font12</font>
                    <scroll>true</scroll>
                </control>

                <control type="label">
                    <description>Studio txt</description>
                    <left>0</left>
                    <top>35</top>
                    <width>80</width>
                    <height>25</height>
                    <label>Studio:</label>
                    <align>right</align>
                    <aligny>center</aligny>
                    <font>font12</font>
                    <textcolor>blue</textcolor>
                </control>
                <control type="label">
                    <description>Studio Value</description>
                    <left>82</left>
                    <top>35</top>
                    <width>240</width>
                    <height>25</height>
                    <label fallback="">$INFO[ListItem.Studio]</label>
                    <align>left</align>
                    <aligny>center</aligny>
                    <font>font12</font>
                    <scroll>true</scroll>
                </control>

                <control type="label">
                    <description>Rating txt</description>
                    <left>0</left>
                    <top>55</top>
                    <width>80</width>
                    <height>25</height>
                    <label>Rating:</label>
                    <align>right</align>
                    <aligny>center</aligny>
                    <font>font12</font>
                    <textcolor>blue</textcolor>
                </control>
                <control type="label">
                    <description>Rating Value</description>
                    <left>82</left>
                    <top>55</top>
                    <width>250</width>
                    <height>25</height>
                    <label fallback="">$INFO[ListItem.Rating]</label>
                    <align>left</align>
                    <aligny>center</aligny>
                    <font>font12</font>
                    <scroll>true</scroll>
                </control>

                <!-- Plot -->
                <control type="textbox">
                    <description>Plot</description>
                    <left>330</left>
                    <top>10</top>
                    <width>285</width>
                    <height>120</height>
                    <font>font10</font>
                    <align>left</align>
                    <textcolor>white</textcolor>
                    <label>$INFO[ListItem.Plot]</label>
                    <autoscroll time="2000" delay="3000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
                </control>
            </control>

            <!-- Artwork ---------------------------------------------------------------------- -->
            <control type="image">
                <left>50</left>
                <top>0</top>
                <width>360</width>
                <height>540</height>
                <aspectratio aligny="bottom">keep</aspectratio>
                <fadetime>IconCrossfadeTime</fadetime>
                <texture background="true">$VAR[PosterThumb]</texture>
                <bordertexture border="8">ThumbShadow.png</bordertexture>
                <bordersize>8</bordersize>
            </control>
        </control>
	</include>
</includes>
